map <C-i> recolor

# Disable statusbar. Default is "s"
#set guioptions ""
# Show a tilde instead of the full home path
set statusbar-home-tilde "true"
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 2
set selection-clipboard clipboard

set recolor-darkcolor "#dedede"
set recolor-lightcolor "#2d2a2e"
set recolor true
set default-bg "#2d2a2e"
set default-fg "#dedede"
set statusbar-bg "#2d2a2e"
